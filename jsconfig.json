{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@features/*": ["src/features/*"],
            "@layout/*": ["src/layout/*"],
            "@hooks/*": ["src/hooks/*"],
            "@page/*": ["src/page/*"],
            "@style/*": ["src/style/*"],
            "@type/*": ["src/type/*"],
            "@mocks/*": ["src/mocks/*"],
            "@utils/*": ["src/utils/*"],
            "@components/*": ["src/components/*"],
            "@assets/*": ["src/assets/*"],
            "@images/*": ["src/assets/images/*"],
            "@scss/*": ["src/assets/scss/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
